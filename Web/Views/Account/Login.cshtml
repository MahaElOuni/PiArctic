@if (ViewBag.state == "Pending")
{
      <div class="alert alert-danger" role="alert">
          Thank you our dear visitor, your request is in court of treatment.
      </div>
}
else if (ViewBag.state == "Rejected")
{
      <div class="alert alert-danger" role="alert">
          Thank you our dear visitor, your request is rejected.
      </div>
}
<br /><br />
<div class="row">
    <div class="col-md-12">
        <div class="card" style="max-width:500px;margin:auto; align-content:center;align-self:center;">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h5 class="card-header info-color white-text text-center py-4" style="background-color:	indigo">
                    <strong>Sign in</strong>
                </h5>
                <br /><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">
                    <!-- Form -->
                    <form class="text-center">
                        <!-- Email -->
                        <div class="md-form">
                            @*<input type="email" id="materialLoginFormEmail" class="form-control">*@
                            <label for="materialLoginFormEmail">E-mail</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @name = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                        <!-- Password -->
                        <div class="md-form">
                            @*<input type="password" id="materialLoginFormPassword" class="form-control">*@
                            <label for="materialLoginFormPassword">Password</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", @name = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="d-flex justify-content-around">
                            <div>
                                <!-- Remember me -->
                                <div class="form-check">
                                    @*<input type="checkbox" class="form-check-input" id="materialLoginFormRemember">*@
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                    @*  <label class="form-check-label" for="materialLoginFormRemember">Remember me</label>*@
                                </div>
                            </div>
                            <div>
                                <!-- Forgot password -->
                                <a href="#"></a>
                                @Html.ActionLink("Forget your password ?", "ForgotPassword")
                            </div>
                        </div>

                        <!-- Sign in button -->
                        @*<a class="main_btn" href="@Url.Action("Index", "Home")">Login</a>*@
                        <!-- Sign in button -->
                        <button class="main_btn" type="submit">Sign in</button>


                        <!-- Register -->
                        <p>
                            Not a member?
                            <a href="#"></a>
                            @Html.ActionLink("Register as a new user", "Register")

                        </p>

                        @*Social login
                            <p>or sign in with:</p>
                            <a type="button" class="btn-floating btn-fb btn-sm">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a type="button" class="btn-floating btn-tw btn-sm">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a type="button" class="btn-floating btn-li btn-sm">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a type="button" class="btn-floating btn-git btn-sm">
                                <i class="fab fa-github"></i>
                            </a>*@

                    </form>

                    <!-- Form -->
                    <div class="col-md-12">
                        <section id="socialLoginForm">
                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                        </section>
                    </div>
                </div>
                }
        </div>
        <!-- Material form login -->
    </div>

</div>
<br /><br />
