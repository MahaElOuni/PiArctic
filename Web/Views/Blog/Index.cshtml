<p>
    <div class="col-sm-4 md-form">
        <a class="main_btn" href="@Url.Action("Create", "Blog")">Create</a>
    </div>

</p>

<section class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog_left_sidebar">
                    @foreach (var item in Model)
                    {

                        <article class="row blog_item">
                            <div class="col-md-3">
                                <div class="blog_info text-right">
                                    <ul class="blog_meta list">
                                        <li>@Html.DisplayFor(modelItem => item.ne) <i class="lnr lnr-user"></i></li>
                                        <li>@Html.DisplayFor(modelItem => item.DatePost)          <i class="lnr lnr-calendar-full"></i></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="blog_post">
                                    <img src="@Url.Content("~/Content/Upload/")@Html.DisplayFor(modelItem => item.Photo)" style="max-width: 100%;width: 510px;height: 275.3px;" alt="">
                                    <div class="blog_details">
                                        <a href="single-blog.html"><h2>@Html.DisplayFor(modelItem => item.Titre)</h2></a>
                                        <p>@Html.DisplayFor(modelItem => item.Contenu)</p>
                                        <a href="@Url.Action("Details","Blog", new {id=item.BlogId })" class="blog_btn">View More</a>
                                    </div>
                                </div>
                            </div>
                        </article>

                    }


                    <nav class="blog-pagination justify-content-center d-flex">
                        <ul class="pagination">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </ul>
                    </nav>

                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Posts">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="lnr lnr-magnifier"></i></button>
                            </span>
                        </div><!-- /input-group -->
                        <div class="br"></div>
                    </aside>

                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Popular Posts</h3>
                        <div class="media post_item">
                            <img src="~/img/blog/popular-post/post1.jpg" alt="post">
                            <div class="media-body">
                                <a href="blog-details.html"><h3>Space The Final Frontier</h3></a>
                                <p>02 Hours ago</p>
                            </div>
                        </div>

                        <div class="br"></div>
                    </aside>
                    @*POPULLAR POSt*@
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="~/img/blog/add.jpg" alt=""></a>
                        <div class="br"></div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
