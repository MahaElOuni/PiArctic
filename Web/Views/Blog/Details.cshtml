<section class="blog_area single-post-area p_120">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 posts-list">
				<div class="single-post row">
					<div class="col-lg-12">
						<div class="feature-img">
							<img src="@Url.Content("~/Content/Upload/")@Html.DisplayFor(modelItem => Model.Photo)" style="max-width: 100%;width: 690px;height: 322px;" alt="">
						</div>
					</div>
					<div class="col-lg-3  col-md-3">
						<div class="blog_info text-right">
							<ul class="blog_meta list">
								<li>@Html.DisplayFor(modelItem => Model.ne)<i class="lnr lnr-user"></i></a></li>
								<li>@Html.DisplayFor(modelItem => Model.DatePost)<i class="lnr lnr-calendar-full"></i></a></li>
								<li>NBR COMMENT<i class="lnr lnr-bubble"></i></a></li>
								<li>@Html.DisplayFor(modelItem => Model.NbrLike)   <i class="lnr lnr-heart"></i></li>
							</ul>
						</div>
					</div>
					<div class="col-lg-9 col-md-9 blog_details">
						<h2>@Html.DisplayFor(modelItem => Model.Titre)</h2>
						<p class="excert">
							@Html.DisplayFor(modelItem => Model.Des)
						</p>
					</div>
					<div class="col-lg-12">
						
						
					</div>
				</div>

			</div>
			<div class="col-lg-4">
				<div class="blog_right_sidebar">
					@*FOR THE JEE*@
					<aside class="single_sidebar_widget search_widget">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search Posts">
							<span class="input-group-btn">
								<button class="btn btn-default" type="button"><i class="lnr lnr-magnifier"></i></button>
							</span>
						</div><!-- /input-group -->
						<div class="br"></div>
					</aside>
					@*FOR THE JEE*@
					<aside class="single_sidebar_widget popular_post_widget">
						<h3 class="widget_title">Popular Posts</h3>
						<div class="media post_item">
							<img src="~/img/blog/popular-post/post1.jpg" alt="post">
							<div class="media-body">
								<a href="blog-details.html"><h3>Space The Final Frontier</h3></a>
								<p>02 Hours ago</p>
							</div>
						</div>
						<div class="br"></div>
					</aside>
					@*FOR THE JEE*@
					<aside class="single_sidebar_widget ads_widget">
						<a href="#"><img class="img-fluid" src="~/img/blog/add.jpg" alt=""></a>
						<div class="br"></div>
					</aside>
					@*FOR THE JEE*@
				</div>
			</div>
		</div>
	</div>
</section>


<div class="comments-area">
	<a class="main_btn" href="@Url.Action("Create", "Comment", new {  id=Model.BlogId })">Add a comment</a>
	<a class="main_btn" href="@Url.Action("Like", "Like", new {  id=Model.BlogId })">like</a>
	<h4>NBR COMMENT</h4>
	@foreach (var item in Model.Comments)
	{
		<div class="comment-list">

			<div class="single-comment justify-content-between d-flex">

				<div class="user justify-content-between d-flex">
					<div class="thumb">
						<img src="@Url.Content("~/Content/Upload/")@Html.DisplayFor(modelItem => item.Photoc)" style="max-width: 100%;width: 89px;height: 70px;" alt="">
					</div>
					<div class="desc">
						<h5><a href="#">@Html.DisplayFor(modelItem => item.nom)</a></h5>
						<p class="date">@Html.DisplayFor(modelItem => item.DateCom) </p>
						<p class="comment">
							@Html.DisplayFor(modelItem => item.Contenu)
						</p>
					</div>
				</div>
				

			</div>
		</div>
	
		
		}

</div>