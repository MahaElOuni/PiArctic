<h2>My Account</h2>
<hr />
<div class="container-fluid">
    <section class="section" style="display: flex;justify-content: center; align-items: center;">
        <div class="row">
            <div class="col-lg-12 mb-r">
                <div class="card card-cascade narrower" style="height:300px;width:200px">
                    <div class="view gardient-card-header info-color ">
                        <h4 class="mb-0" style="align-content:center">Account's Photo</h4>
                    </div>
                    <div class="card-body text-center mb-4" style="height:10px">
                        <img src="@Url.Content("~/Content/Upload/")@Html.DisplayFor(model => model.Photo)" style="height:250px; width:150px" />
                    </div>
                </div>

            </div>

        </div>
        <div class="col-lg-6 mb-r">
            <div class="card card-cascade narrower">
                <div class="view gardient-card-header info-color">
                    <h4 class="mb-0"> My Account informations</h4>
                </div>
                <div class="card-body text-center">
                    <form style="align-items:flex-end">
                        <div class="row">
                            <div class="col-md-12">
                                <h1 class="card-title"><strong>@Html.DisplayFor(model => model.FName) @Html.DisplayFor(model => model.LName)</strong></h1>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">Email: </strong> @Html.DisplayFor(model => model.Email)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">Phone Number: </strong> @Html.DisplayFor(model => model.PhoneNumber)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">CIN: </strong> @Html.DisplayFor(model => model.CIN)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">Address: </strong> @Html.DisplayFor(model => model.StreetName),@Html.DisplayFor(model => model.City)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">Post: </strong>   @Html.DisplayFor(model => model.Role)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="mb-0"> <strong style="color:blueviolet">Birthday : </strong>@Html.DisplayFor(model => model.BirthDate)</h4>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12 text-center">
                                @Html.ActionLink("Change your password", "ChangePassword", "Manage", null, new { @class = "btn btn-outline-success btn-rounded btn-lg waves-effect waves-light" })
                            </div>
                        </div>


                    </form>

                </div>

            </div>

        </div>
    </section>
</div>
